const fs = require('fs');

const file = 'test.txt';
const appended = 'Welcome to coding';

fs.open(file,'a',(err,data)=>
{
    if(err) console.log('Error',err.message)
    else 
    {
        fs.write(data,appended,(err,bytes)=>
        {
            if(!err) console.log('Appended succesfully')
            else console.log('error')
        })
    
}
})

fs.readFile('./test.txt','utf8',(err,read)=>
    {
        if(!err) console.log(read)
        else console.log('error')
    });
